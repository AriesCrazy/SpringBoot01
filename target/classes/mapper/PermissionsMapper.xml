<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.by.dao.PermissionsDao">
    <resultMap type="com.by.entity.Permissions" id="PermissionsMap">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="description" column="description" />
        <result property="resource_id" column="resource_id" />
    </resultMap>
    
    
    <!--通用查询-->
    <select id="select" resultMap="PermissionsMap">
        SELECT p.*
        FROM permissions p
        LEFT JOIN role_permissions rp ON p.id = rp.permission_id AND rp.role_id = #{roleId}
        WHERE 1=1
        <if test="id != null and id != ''">
            AND p.id = #{id}
        </if>
        <if test="name != null and name != ''">
            AND p.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="description != null and description != ''">
            AND p.description LIKE CONCAT('%', #{description}, '%')
        </if>
        <if test="roleId != null and roleId != ''">
            AND rp.role_id IS NOT NULL
        </if>
    </select>
    
    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into permissions(id,name,description,resource_id)
        values (#{id},#{name},#{description},#{resource_id})
    </insert>
    
    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into permissions(id,name,description,resource_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.name},#{entity.description},#{entity.resource_id})
        </foreach>
    </insert>


    <insert id="addPermission">
        insert ignore into role_permissions(role_id, permission_id)
        values (#{role_id}, #{permission_id})
    </insert>

    <!-- 更新数据 -->
    <update id="update">
        update permissions
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="resource_id != null and resource_id != ''">
                resource_id = #{resource_id},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete">
        delete from  permissions where id = #{id}
    </delete>

    <delete id="deletePermission">
        delete from role_permissions
        where role_id = #{role_id} and permission_id = #{permission_id}
    </delete>
</mapper>