<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.by.dao.VendorDao">
    <resultMap type="com.by.entity.Vendor" id="VendorMap">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="img" column="img" typeHandler="com.by.typehandler.JsonTypeHandler"/>
        <result property="tel" column="tel" />
        <result property="contact" column="contact" />
        <result property="status" column="status" />
        <result property="brief" column="brief" />
        <result property="province" column="province" />
        <result property="city" column="city" />
        <result property="county" column="county" />
        <result property="address" column="address" />
        <result property="lat" column="lat" />
        <result property="lng" column="lng" />
        <result property="seq" column="seq" />
        <result property="lastUpdateBy" column="lastUpdateBy" />
        <result property="lastUpdateTime" column="lastUpdateTime" />
    </resultMap>
    
    
    <!--通用查询-->
    <select id="select" resultMap="VendorMap">
        select
        id,name,email,img,tel,contact,status,brief,province,city,county,address,lat,lng,seq,lastUpdateBy,lastUpdateTime
        from vendor
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="brief != null and brief != ''">
                and brief = #{brief}
            </if>
            <if test="province != null and province != ''">
                and province = #{province}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
            <if test="county != null and county != ''">
                and county = #{county}
            </if>
        </where>
    </select>
    
    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vendor(name,email,img,tel,contact,status,brief,province,city,county,address,lat,lng,seq,lastUpdateBy)
        values (#{name},#{email},#{img,typeHandler=com.by.typehandler.JsonTypeHandler},#{tel},#{contact},#{status},#{brief},#{province},#{city},#{county},#{address},#{lat},#{lng},#{seq},#{lastUpdateBy})
    </insert>
    
    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vendor(id,name,email,img,tel,contact,status,brief,province,city,county,address,lat,lng,seq,lastUpdateBy)
        values
        <foreach collection="vendors" item="entity" separator=",">
            (#{entity.id},#{entity.name},#{entity.email},#{entity.img},#{entity.tel},#{entity.contact},#{entity.status},#{entity.brief},#{entity.province},#{entity.city},#{entity.county},#{entity.address},#{entity.lat},#{entity.lng},#{entity.seq},#{entity.lastUpdateBy})
        </foreach>
    </insert>
    
    <!-- 更新数据 -->
    <update id="update">
        update vendor
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="img != null and img != ''">
                img = #{img,typeHandler=com.by.typehandler.JsonTypeHandler},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="contact != null and contact != ''">
                contact = #{contact},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="brief != null and brief != ''">
                brief = #{brief},
            </if>
            <if test="province != null and province != ''">
                province = #{province},
            </if>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
            <if test="county != null and county != ''">
                county = #{county},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="lat != null and lat != ''">
                lat = #{lat},
            </if>
            <if test="lng != null and lng != ''">
                lng = #{lng},
            </if>
            <if test="seq != null and seq != ''">
                seq = #{seq},
            </if>
            <if test="lastUpdateBy != null and lastUpdateBy != ''">
                lastUpdateBy = #{lastUpdateBy},
            </if>
            <if test="lastUpdateTime != null and lastUpdateTime != ''">
                lastUpdateTime = #{lastUpdateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键软删除-->
    <update id="delete">
        update  vendor set status = 2 where id = #{id}
    </update>
</mapper>