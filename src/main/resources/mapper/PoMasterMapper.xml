<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.by.dao.PoMasterDao">
    <resultMap type="com.by.entity.PoMaster" id="PoMasterMap">
        <result property="id" column="id"/>
        <result property="vendorId" column="vendorId"/>
        <result property="vendorName" column="vendorName"/>
        <result property="poDate" column="poDate"/>
        <result property="status" column="status"/>
        <result property="brief" column="brief"/>
        <result property="totalPrice" column="totalPrice"/>
        <result property="purchaser" column="purchaser"/>
        <result property="lastUpdateBy" column="lastUpdateBy"/>
        <result property="lastUpdateTime" column="lastUpdateTime"/>
    </resultMap>


    <!--通用查询-->
    <select id="select" resultMap="PoMasterMap">
        select
        id,vendorId,vendorName,poDate,status,brief,totalPrice,purchaser,lastUpdateBy,lastUpdateTime
        from po_master
        <where>
            <if test="id != null and id != ''">
                and id like concat('%',#{id},'%')
            </if>
            <if test="vendorId != null and vendorId != ''">
                and vendorId = #{vendorId}
            </if>
            <if test="vendorName != null and vendorName != ''">
                and vendorName like concat('%',#{vendorName},'%')
            </if>
            <if test="poDate != null ">
                and poDate = #{poDate}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="purchaser != null and purchaser != ''">
                and purchaser = #{purchaser}
            </if>
        </where>
    </select>

    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into po_master(id, vendorId, vendorName, poDate, status, brief, totalPrice, purchaser, lastUpdateBy)
        values (#{id}, #{vendorId}, #{vendorName}, #{poDate}, #{status}, #{brief}, #{totalPrice}, #{purchaser},
                #{lastUpdateBy})
    </insert>

    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into po_master(id,vendorId,vendorName,poDate,status,brief,totalPrice,purchaser,lastUpdateBy)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.vendorId},#{entity.vendorName},#{entity.poDate},#{entity.status},#{entity.brief},#{entity.totalPrice},#{entity.purchaser},#{entity.lastUpdateBy})
        </foreach>
    </insert>

    <!-- 更新数据 -->
    <update id="update">
        update po_master
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="vendorId != null and vendorId != ''">
                vendorId = #{vendorId},
            </if>
            <if test="vendorName != null and vendorName != ''">
                vendorName = #{vendorName},
            </if>
            <if test="poDate != null and poDate != ''">
                poDate = #{poDate},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="brief != null and brief != ''">
                brief = #{brief},
            </if>
            <if test="totalPrice != null and totalPrice != ''">
                totalPrice = #{totalPrice},
            </if>
            <if test="purchaser != null and purchaser != ''">
                purchaser = #{purchaser},
            </if>
            <if test="lastUpdateBy != null and lastUpdateBy != ''">
                lastUpdateBy = #{lastUpdateBy},
            </if>
            <if test="lastUpdateTime != null and lastUpdateTime != ''">
                lastUpdateTime = #{lastUpdateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键软删除-->
    <update id="delete">
        update po_master
        set status = 20
        where id = #{id}
    </update>

    <!--更改状态-->
    <update id="updateStatus">
        update po_master
        set status = #{status}
        where id = #{id}
    </update>
</mapper>