<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.by.dao.IoMasterDao">
    <resultMap type="com.by.entity.IoMaster" id="IoMasterMap">
        <result property="id" column="id" />
        <result property="vendorId" column="vendorId" />
        <result property="vendorName" column="vendorName" />
        <result property="brief" column="brief" />
        <result property="poId" column="poId" />
        <result property="ioDate" column="ioDate" />
        <result property="receiver" column="receiver" />
        <result property="lastUpdateBy" column="lastUpdateBy" />
        <result property="lastUpdateTime" column="lastUpdateTime" />
    </resultMap>
    
    
    <!--通用查询-->
    <select id="select" resultMap="IoMasterMap">
        select
            id,vendorId,vendorName,brief,poId,ioDate,receiver,lastUpdateBy,lastUpdateTime
        from `io_master`
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="vendorId != null and vendorId != ''">
                and vendorId = #{vendorId}
            </if>
            <if test="poId != null and poId != ''">
                and poId = #{poId}
            </if>
        </where>
    </select>
    
    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into `io_master`(id,vendorId,vendorName,brief,poId,ioDate,receiver,lastUpdateBy)
        values (#{id},#{vendorId},#{vendorName},#{brief},#{poId},#{ioDate},#{receiver},#{lastUpdateBy})
    </insert>
    
    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into `io_master`(vendorId,vendorName,brief,poId,ioDate,receiver,lastUpdateBy)
        values
        <foreach collection="ioMasters" item="entity" separator=",">
            (#{entity.vendorId},#{entity.vendorName},#{entity.brief},#{entity.poId},#{entity.ioDate},#{entity.receiver},#{entity.lastUpdateBy})
        </foreach>
    </insert>
    
    <!-- 更新数据 -->
    <update id="update">
        update io_master
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="vendorId != null and vendorId != ''">
                vendorId = #{vendorId},
            </if>
            <if test="vendorName != null and vendorName != ''">
                vendorName = #{vendorName},
            </if>
            <if test="brief != null and brief != ''">
                brief = #{brief},
            </if>
            <if test="poId != null and poId != ''">
                poId = #{poId},
            </if>
            <if test="ioDate != null and ioDate != ''">
                ioDate = #{ioDate},
            </if>
            <if test="receiver != null and receiver != ''">
                receiver = #{receiver},
            </if>
            <if test="lastUpdateBy != null and lastUpdateBy != ''">
                lastUpdateBy = #{lastUpdateBy},
            </if>
            <if test="lastUpdateTime != null and lastUpdateTime != ''">
                lastUpdateTime = #{lastUpdateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键软删除-->
    <update id="delete">
        update  io_master set status = 0 where id = #{id}
    </update>
</mapper>